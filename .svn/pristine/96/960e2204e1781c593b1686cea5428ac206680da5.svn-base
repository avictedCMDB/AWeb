@charset "utf-8";
/* CSS Document */
#matter_section .search_area {
  background: #f6f4f5;
  padding: 25px 0 15px 15px;
  border: 1px solid #dfdfdf;
}
#matter_section .search_area dl {
	float: left;
	font-size: 12px;
	margin-bottom: 10px;
	margin-right: 30px;
}
#matter_section .search_area dl.last {
	margin-right: 0;
}
#matter_section .search_area dl dt {
	float: left;
	line-height: 25px;
	margin-right: 5px;
	width: 65px;
	text-align: right;
}
#matter_section .search_area dl dd {
	float: left;
}
#matter_section ul li {
	float: left;
	line-height: 25px;
	margin-right: 8px;
}
#matter_section .special_input {
	border-right: none;
}
#matter_section .form-control {
	height: 28px;
	width: 215px;
}
#matter_section .input-group-addon {
	height: 28px;
	padding: 7px 5px 5px 0px;
	border-left: none;
	background: #fff;
	cursor: pointer;
	display: inline-table;
}
#matter_section .btn {
	height: 28px;
	line-height: 28px;
	padding: 0 20px;
	border: none;
}
.red {
	background: #0091dc;
	color: #fff;
}
.gray {
	background: #666666;
	color: #fff;
}
.btn_list {
	text-align: right;
}
.btn_list ul {
	display: inline-block;
}
.search_result {
	padding-top: 15px;
}
.state_list {
	margin-bottom: 15px;
	overflow: hidden;
}
.state_list ul li a {
	display: block;
	width: 75px;
	text-align: center;
	border: 1px solid #dfdfdf;
}
.state_list ul li.active a,
.state_list ul li a:hover {
	background: #0091dc;
	color: #fff;
}


.search_result table {
	width: 950px;
}
.search_result table tr th {
	background: #dfdfdf;
	border:1px solid #dfdfdf;
	border-right: 1px solid #fff;
	line-height: 32px;
	text-align: center;
	font-size: 12px;
}
.search_result table tr th.last {
	border-right: 1px solid #dfdfdf;
}
.search_result table tr td {
	border:1px solid #dfdfdf;
	padding: 10px;
	font-size: 12px;
	vertical-align: middle;
	text-align: center;
}
.search_result table tr td a {
	word-break: break-all;
}
.search_result table tr td.right_none {
	border-right: none;
}
.search_result table tr td.left_none {
	border-left: none;
	text-align: left;
	color: #4798ed;
}
.search_result table tr.company td {
	border: none;
	font-weight: bold;
}
.search_result table tr td a {
	margin-right: 5px;
	color: #4798ed;
}
.search_result table tr td a:hover {
	text-decoration: underline;
}
.search_result table tr.company td span{
	font-weight: 100;
	position: relative;
}
.img_pro {
	border:1px solid #dfdfdf;
	margin-bottom: 0;
}
.price {
	color: #ff4200;
}
.search_result table tr td.price,
.search_result table tr td.num {
	vertical-align: middle;
}
#matter_section .search_result table tr.company td ul li.right_box {
	float: right;
	margin-left: 30px;
}
.search_result table tr td span.delivery {
	position: relative;
}
.search_result table tr td .delivery_info {
	position: absolute;
	right: 0px;
	top:30px;
	width: 200px;
	background: #d6e8f7;
	border: 1px solid #dfdfdf;
	padding: 20px;
	z-index: 999;
}
.search_result table tr td .delivery_info .title {
	border-bottom: 1px solid #dfdfdf;
	padding-bottom: 5px;
	margin-bottom: 10px;
	font-size: 14px;
	color: #0091dc;
}
.search_result table tr td .delivery_info ul li {
	list-style-type: disc;
	text-align: left;
	margin-bottom: 10px;
	width: 100%;
}
.search_result table tr td .delivery_info ul li.old {
	color: #999;}
.search_result table tr td .delivery_info ul li p {
	margin-bottom: 0;
	line-height: 18px;
}
.search_result table tr td .delivery_info .more i {
	margin-left: 10px;
}
.arrow_top {
	position: absolute;
	top: -9px;
	font-size: 20px;
	right: 41px;
}


/*弹出框*/
.modal-header {
	background: #0091dc;
	color: #fff;
	border-radius: 5px 5px 0 0;
	padding: 10px;
}
.modal-header h4 {
	text-align: left;
}
.modal-header .close {
	color: #fff;
}
.modal-body table {
	margin-top: 0;
	width: 100%;
}
.modal-body table tr td.limited ul{
	height: 300px;
	overflow-y:scroll;
}
.search_result table tr td a {
    display: block;
}