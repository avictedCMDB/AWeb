@charset "utf-8";
/* CSS Document */

#matter_section {
	float: right;
	width: 950px;
}
#matter_section a {
	color: #0091dc;
}
#matter_section a:hover {
	color: #ff4200;
}
#matter_section h2 {
  padding: 0 0 5px;
  margin-bottom: 25px;
  font-size: 16px;
  text-align: center;
  border-bottom: 1px solid #dfdfdf;
}
#matter_section .inner_main {
	padding: 0 20px;
}
#matter_section .section_inner {
	margin-top: 15px;
	background: #dbf0fb;
	border: 1px solid #0091dc;
	padding: 10px 10px;
}
#matter_section .section_inner p {
	margin-bottom: 0;
	color: #ff4200;
	font-size: 13px;
}
#matter_section .section_inner p span{
	
	margin: 0 3px;
}
#matter_section .section_inner p span.tit {
	color: #000;
}
#matter_section .state {
	margin-bottom: 30px;
}
#matter_section .state p {
	color: #aaa;
}
.blue {
	margin-left: 10px;
	height: 25px;
	line-height: 25px;
}
#matter_section .add_area {
	background: #eee;
	padding: 20px 20px 40px;
	margin-bottom: 50px;
}
#matter_section .add_area .detail {
	line-height: 34px;}
#matter_section .add_area .detail,
#matter_section .add_area .form-control{
	width: 400px;
	float: left;
}
#matter_section label {
	width: 120px;
	float: left;
	text-align: right;
	line-height: 34px;
	margin-right: 10px;
	padding: 0;
	font-weight: 100;
}
#matter_section .add_area p {
	font-size: 14px;
	margin-bottom: 25px;
	margin-left: 30px;
	font-weight: bold;
}
#matter_section .add_area p span.red {
	color: #ff4200;
}
.btn_list {
	padding-left: 100px;
	margin-top: 20px;
}
.btn_list ul {
	display: inline-block;
}
.btn_list ul li {
	float: left;
	margin: 0 5px;
}
.btn_list .btn.gray {
    background: #666 none repeat scroll 0 0;
    border: medium none;
    color: #fff;
    height: 34px;
    line-height: 34px;
    padding: 0 20px;
}
.btn_list .btn.blue {
	height: 34px;
    line-height: 34px;
    padding: 0 20px;
}
.btn.gray:hover {
	background: #ccc;
	color: #000;
}
.up_area .btn_list {
	text-align: center;
	padding: 0;
}
.up_area .btn_list ul {
	padding: 0;
}
#matter_section .up_area p {
	margin-bottom: 15px;
}
.up_area ul {
	padding-left: 30px;
}
.up_area ul li {
	line-height: 28px;
}
.info_list .section_inner {
	margin-left: 30px;
	margin-right: 30px;
}
#matter_section .info_list {
	margin-bottom: 20px;
}
#matter_section .info_list p {
	margin-bottom: 15px;
}
#matter_section .info_list .section_inner p {
	margin-bottom: 0;
	font-weight: 100;
	margin-left: 0;

}
.item {
	margin-top: 15px;
	margin-left: 30px;
}
.item span.label_title {
	color: #333;
	font-size: 12px;
	float: left;
	line-height: 23px;
	font-weight: bold;
}
.item .up_btn {
	float: left;
	line-height: 23px;
	position: relative;
}
.item .up_btn .blue {
	margin-left: 0;
}
.item .up_btn span {
	margin-right: 8px;
}
.mr10 {
	color: #ff4200;
}
#matter_section .item .up_btn .info_display {
	position: absolute;
	width: 400px;
	margin: 0;
	bottom:30px;
	left: 209px;
}
#matter_section .item .up_btn .info_display ul {
	padding: 0;
	line-height: 18px;
}
#matter_section .item .up_btn .info_display p {
	font-size: 10px;
	font-weight: bold;
	color: #000;
}
#matter_section .item .up_btn .info_display ul li {
	line-height: 18px;
}
.arrow {
	position: absolute;
	bottom: -10px;
	left: 20px
}