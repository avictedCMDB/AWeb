@charset "utf-8";
/* CSS Document */
#header_login {
	padding-top: 1px;
	background: #fff;
	padding-bottom: 10px;
}
#header_login h1 {
	margin-top: 15px;
}
#contents .inner {
	min-height: 400px;
	width: 925px;
	padding-top: 70px;
}
.img_left {
	float: left;
	padding-top: 20px;
}
.login_box {
	float: right;
	width: 418px;
}
.login_box h2 {
	margin: 0;
}
.login_inner {
	background: url(../img/login/bg-box_mid.gif) left top repeat-y;
	width: 400px;
	margin-left: 6px;
	
}
.inner_bottom {
	background: url(../img/login/bg-box_bottom.png) left bottom no-repeat;
	padding: 10px 30px 20px;
	font-size: 12px;
	
}
.inner_bottom i {
	margin-right: 3px;
	color: #ccc;
}
.inner_bottom ul {
	font-size: 12px;
}
.inner_bottom ul li {
	float: right;
}
.inner_bottom ul li.qrcode {
	float: left;
}
.input-group {
	margin-top: 10px;
}
.forget {
	margin-top: 10px;
	font-size: 14px;
	padding: 0 5px;
}
.forget .register {
	float: right;
	color: #ff4200;
}
.btn_login {
	background: #0091dc;
	width: 100%;
	color: #fff;
	font-size: 20px;
	padding: 3px 12px;
}
.btn_login:hover,
.btn_login:focus {
	color: #fff;
	background: #73b6e7;
}