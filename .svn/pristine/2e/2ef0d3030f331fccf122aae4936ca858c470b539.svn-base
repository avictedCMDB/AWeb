@charset "utf-8";
/* CSS Document */
#contents .inner h2 {
	font-size: 18px;
	line-height: 27px;
	color: #0091dc;
	text-align: center;
	font-weight: bold;
	border-bottom: 1px solid #dfdfdf;
	padding-bottom: 10px;
}
.btn_list {
	text-align: right;
	margin-right: 10px;
}
.form-group .input-group .input-group-addon.border_right {
	border-bottom-right-radius: 4px;
    border-top-right-radius: 4px;
    border-left: 0;
}
.form-group .input-group .form-control.border_left {
	border-bottom-left-radius: 4px;
    border-top-left-radius: 4px;
}
.form-group .input-group span.text {
	padding-right: 5px;
}
.step_section .form-group.special_group01 .input_area {
	width: auto;
}
.input-append {
    margin-top: 0px;
}
.search_result {
	margin-bottom: 20px;
}
.step_section .form-group.special_group01 .input_area {
    width: 700px;
}
.submit_btn ul li {
	margin: 20px 10px;
}