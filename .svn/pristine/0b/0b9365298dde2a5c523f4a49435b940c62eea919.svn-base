    @RequestMapping("/export")
    public void export(HttpServletRequest req, HttpServletResponse res) {

        String orderId = req.getParameter("orderId");
        String companyId = req.getParameter("companyId");
        String invoiceStatus = req.getParameter("invoiceStatus");
        String timeStart = req.getParameter("timeStart");
        String timeEnd = req.getParameter("timeEnd");

        logger.info("发票导出-timeStart[" + timeStart + "], timeEnd[" + timeEnd + "], orderId[" + orderId + "], companyId[" + companyId
                + "], invoiceStatus[" + invoiceStatus + "]");

        res.setCharacterEncoding("utf-8");
        res.setContentType("application/x-download");

        String file = "发票数据导出.xls";
        try {
            file = URLEncoder.encode(file, "utf-8");
        } catch (UnsupportedEncodingException e) {
            // TODO Auto-generated catch block
            e.printStackTrace();
        }
        res.addHeader("Content-Disposition", "attachment;filename=" + file);

        if ("0".equals(invoiceStatus) || "1".equals(invoiceStatus) || "2".equals(invoiceStatus)) {

        } else {
            invoiceStatus = "";
        }

        List<Invoice> list = invoiceService.getInvoiceList(timeStart, timeEnd, orderId, companyId, invoiceStatus, -1, -1);

        // 订单编号 采购单位 销售价格 采购金额 采购数量 发票类型 状态 快递公司 快递单号
        List<String> cols = Arrays.asList(new String[] { "订单编号", "采购单位", "销售价格", "采购金额", "采购数量", "发票类型", "状态", "快递公司", "快递单号" });

        List<List<String>> data = new ArrayList<List<String>>();
        DecimalFormat df = new DecimalFormat("0.00");
        for (Invoice i : list) {
            List<String> item = new ArrayList<String>();
            item.add(i.getOrderId());
            item.add(i.getCompanyName());
            item.add(df.format(i.getOrderAmount()));
            item.add(df.format(i.getOrderAmountInit()));
            item.add(String.valueOf(i.getGoodsNum()));
            if (i.getInvoiceType() == 2) {
                item.add("增票");
            } else if (i.getInvoiceType() == 1) {
                item.add("普票");
            } else {
                item.add("无");
            }
            
            if ("2".equals(i.getInvoiceStatus())) {
                item.add("不开");
            } else if ("1".equals(i.getInvoiceStatus())) {
                item.add("已开");
            } else {
                item.add("未开");
            }
            
            item.add(i.getExpressName());
            item.add(i.getExpressCode());
            
            data.add(item);
        }

        NewExcel excel = new NewExcel();

        excel.createExcel(res, cols, data);
    }
