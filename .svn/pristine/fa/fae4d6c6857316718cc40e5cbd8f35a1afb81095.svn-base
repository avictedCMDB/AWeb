//加载饼图
function loadPieChart(nameArray,dataArray){
   //-----------------饼图-----------------
	var myChart = echarts.init(document.getElementById('countChartDiv'));
    var option = {
    			    title : {
//    			        text: '兵团自治区汇总图',
//    			        subtext: titlePie,
    			        x:'center'
    			    },
    			    tooltip : {
    			        trigger: 'item',
    			        formatter: "{a} <br/>{b} : {c} ({d}%)"
    			    },
    			    legend: {
    			        orient : 'vertical',
    			        x : 'left',
    			        data:nameArray
    			    },
    			    toolbox: {
    			        show : true,
    			        feature : {
    			            //mark : {show: true},
    			            dataView : {show: true, readOnly: false},
    			            magicType : {
    			                show: true, 
    			                type: ['pie', 'funnel'],
    			                option: {
    			                    funnel: {
    			                        x: '25%',
    			                        width: '50%',
    			                        funnelAlign: 'left',
    			                        max: 1548
    			                    }
    			                }
    			            },
    			            restore : {show: true},
    			            saveAsImage : {show: true}
    			        }
    			    },
    			    calculable : true,
    			    series : [
    			        {
    			            name:'访问来源',
    			            type:'pie',
    			            radius : '55%',
    			            center: ['50%', '60%'],
    			            data:dataArray
    			        }
    			    ]
    			};
    myChart.setOption(option);
    
}
